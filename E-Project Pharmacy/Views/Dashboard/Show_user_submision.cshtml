@{
    Layout = "Dash";
}
@model E_Project_Pharmacy.Models.Carrer;


<div class="ltn__feature-area pt-90 pb-90">
    <div class="container">
      
        <div class="row ltn__custom-gutter">
            @if (ViewBag.submition != null)
            {
                @foreach (var value in ViewBag.submition)
                {
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="ltn__feature-item ltn__feature-item-6 text-center border-2">

                            <div class="ltn__feature-info">
                                <h4><a href="service-details.html">@value.carrer_name</a></h4>
                                <p>@value.carrer_description</p>
                                <h6 class="mt-2">Location</h6>
                                <p class="mt-1">@value.carrer_location</p>
                                <a class="btn btn-primary mt-3" asp-route-id="@value.carrer_id" asp-action="Show_resume_detail" asp-controller="Dashboard">Show Users Apply</a>
                            </div>
                        </div>
                    </div>

                }
            }
            else
            {
                <h1>No Gobs</h1>
            }

        </div>
    </div>
</div>
