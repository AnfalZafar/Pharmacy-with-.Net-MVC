@{
    Layout = "Dash";
}
@model E_Project_Pharmacy.Models.Sub_Categare;

<form asp-action="sub_product_update" asp-controller="Dashboard" class="depart_form w-50" method="post" enctype="multipart/form-data">
    <div class="w-100 d-flex justify-content-end pr-3 pt-3">
        <i class="croos fa-sharp fa-solid fa-xmark"></i>
    </div>
    
    <div class="form-group w-75 m-auto pt-4">
        <label for="exampleInputEmail1">Name</label>
        <input type="hidden" asp-for="sub_c_id" asp-controller="Dashboard" />
        <input type="hidden" asp-for="cat_id" asp-controller="Dashboard" />

        <input asp-for="sub_c_name" asp-controller="Dashboard" type="text" class="form-control" aria-describedby="emailHelp"
               placeholder="Enter Departments Name">
    </div>
    <div class="form-group w-75 m-auto pt-4">
        <label for="exampleInputPassword1">Description</label>
        <textarea asp-for="sub_c_description" asp-controller="Dashboard" id="" class="w-100 h-25"></textarea>

    </div>
    <div class="form-group w-75 m-auto pt-4">
        <label for="exampleInputEmail1">Price</label>
        <input asp-for="sub_c_price" asp-controller="Dashboard" type="text" class="form-control" aria-describedby="emailHelp"
               placeholder="Enter Departments Name">
    </div>
    <div class="form-group w-75 m-auto pt-4">
        <label for="exampleFormControlFile1">Choose Img</label>
        <input type="file" asp-for="sub_c_img" asp-controller="Dashboard" class="form-control-file">
    </div>
    <div class="btnss w-100 d-flex justify-content-center mb-3 mt-3">
        <button class="btn btn-primary ">Submit</button>
    </div>
</form>



