<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Achieve Your Carrer</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-action="Index" asp-controller="Home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Carrer</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- FEATURE AREA START ( Feature - 6) -->
<div class="ltn__feature-area pt-90 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2--- text-center">
                    <h1 class="section-title">Apply Now</h1>
                </div>
            </div>
        </div>
        <div class="row ltn__custom-gutter">
            @if(ViewBag.carrer != null){
            @foreach (var value in ViewBag.carrer){
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="ltn__feature-item ltn__feature-item-6 text-center">
            
                    <div class="ltn__feature-info">
                        <h4><a href="service-details.html">@value.carrer_name</a></h4>
                            <p>@value.carrer_description</p>
                            <h6 class="mt-2">Location</h6>
                                <p class="mt-1">@value.carrer_location</p>
                            <a class="btn btn-primary mt-3" asp-route-id="@value.carrer_id" asp-action="carrer_form" asp-controller="Home">Apply</a>
                    </div>
                </div>
            </div>

                }
            }
            else
            {
                <h1>No Gobs</h1>
            }

        </div>
    </div>
</div>
<!-- FEATURE AREA END -->
