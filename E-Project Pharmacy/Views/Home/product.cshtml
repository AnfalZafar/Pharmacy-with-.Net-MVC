                                                <input type="hidden" name="des" value="@value.sub_c_description.ToString()" />
                                                <input type="hidden" name="price" value="@value.sub_c_price.ToString()" />

                                                <button type="submit"><i id="but_@value.sub_c_id.ToString()" class="fas fa-shopping-cart"></i></button>
