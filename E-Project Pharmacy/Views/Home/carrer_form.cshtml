@{
}
@model E_Project_Pharmacy.Models.user_resume;

<div class="ltn__contact-message-area mb-120 mb--100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__form-box contact-form-box box-shadow white-bg">
                    <h4 class="title-2">Submit your Resume</h4>
                    @if (@ClassSessionUser.UserId != null) { 
                    <form id="contact-form" asp-action="form_submit" asp-controller="Home" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                <input type="hidden" asp-for="c_id" value="@ViewBag.id" />
                                    <div class="input-item input-item-name ltn__custom-icon">
                                        <input type="text" asp-for="r_name" placeholder="Enter your name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-email ltn__custom-icon">
                                    <input type="email" asp-for="r_email" placeholder="Enter email address">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-subject ltn__custom-icon">
                                    <input type="text" asp-for="r_location" placeholder="Enter the Address">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-phone ltn__custom-icon">
                                    <input type="text" asp-for="r_phone" placeholder="Enter phone number">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-subject ltn__custom-icon">
                                    <input type="text" asp-for="r_edu" placeholder="Enter the Education">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-item input-item-phone ltn__custom-icon">
                                    <input type="text" asp-for="r_country" placeholder="Enter country Name">
                                    </div>
                                </div>
                            </div>
                            <div class="input-item input-item-textarea ltn__custom-icon">
                                <h6>Your Resume</h6>
                            <input type="file" asp-for="r_resume" accept=".pdf"/>
                            </div>
                            <div class="btn-wrapper mt-3">
                                <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="submit">Submit</button>
                            </div>
                            <p class="form-messege mb-0 mt-20"></p>
                        </form>
                    }

                </div>
            </div>
        </div>
    </div>
</div>